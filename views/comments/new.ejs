<%include ../partials/header %>

<div class="container text-center">
    <h1>Add A New Comment To <%= campground.name%></h1>

    <div style="width:30%; margin:20 auto">
        <form method='post' action='/campgrounds/<%=campground.id%>/comments/new'>
              <div class="form-group">
                          <input type="text" class="form-control" name="comment[text]" placeholder="Text">
              </div>

                <div class="form-group">
                      <button type="submit" class="btn btn-default btn-lg btn-block btn-primary">Submit</button>
                </div>
        
        </form>
    </div>

</div>

