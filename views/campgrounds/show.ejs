<%include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Yelp Camp</p>
            <div class="list-group">
                <a href="#" class="list-group-item active">Info 1</a>
                <a href="#" class="list-group-item">Info 2</a>
                <a href="#" class="list-group-item">Info 3</a>
            </div>
        </div>

        <div class="col-md-9">
            <div class="thumbnail">
                <img src="<%= campground.url %>" class="img-responsive">
                <div class="caption-full">
                    <h4 class="pull-right">Rs.<%=campground.price%>/night</h4> 
                    <h4><a><%=campground.name%></a></h4>
                    <p><%=campground.description%></p>
                    <p><em>Submitted By <%=campground.author.username%></em></p>
                    <% if(user._id.equals(campground.author.id)){%>
                    <a class="btn btn-warning" href="/campgrounds/<%=campground.id%>/edit">Edit</a>
                    <form method="post" id="deleteform" action="/campgrounds/<%=campground.id%>?_method=Delete"><button class="btn btn-danger">Delete</button></form>
                    <%}%>

                </div>
            </div>

            <div class="well">
                <div class="text-right">
                    <p>
                        <a href="/campgrounds/<%=campground.id%>/comments/new" class="btn btn-success">Add a new Comment</a>
                    </p> 
                </div>
                <hr>
                <div class="row">
                    <%campground.comments.forEach(function(comment)
                    {%>
                        <div class="col-md-12">
                            <strong></string><%=comment.author.username%> -</strong>
                            <span class="pull-right">10 days ago</span>
                            <p><%=comment.text %></p>
                            <% if(user._id.equals(comment.author.id)){%>
                            <a class="btn btn-xs btn-warning" href="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>/edit">Edit</a>
                            <form id="deleteform" method="POST" action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=Delete">
                                <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                            </form>
                            <%}%>
                        </div>
                    <%})%>
                </div>

            </div>
        </div>
    </div>

</div>

<%include ../partials/footer %>
